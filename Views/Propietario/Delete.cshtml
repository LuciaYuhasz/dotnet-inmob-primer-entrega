@model dotnet_inmob_primer_entrega.Models.Propietario

@{
    ViewData["Title"] = "Eliminar Propietario";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que querés eliminar este propietario?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.DNI</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
